<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"

    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/layout0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginStart="-3dp"
                    android:src="@drawable/baseline_arrow_back_ios_242" />

                <TextView
                    android:id="@+id/Nametextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:text="Verification Details"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

        </LinearLayout>

<!--        <ImageView-->
<!--            android:id="@+id/edit"-->
<!--            android:layout_width="30dp"-->
<!--            android:layout_height="25dp"-->
<!--            android:layout_alignParentEnd="true"-->
<!--            android:layout_alignParentTop="true"-->
<!--            android:layout_marginTop="5dp"-->
<!--            android:src="@drawable/editing" />-->
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/first"
        android:padding="16dp">

        <TextView
            android:id="@+id/aadhaarHeadingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aadhaar Number:-"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:paddingStart="6dp"
            android:paddingEnd="16dp"/>

        <TextView
            android:id="@+id/aadhaarNumberTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:text="Aadhaar Number:"
            android:background="@drawable/edittext_border123"

            android:textSize="16sp"
             />

        <TextView
            android:id="@+id/aadhaarHeadingTextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pan Number:-"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:paddingStart="6dp"
            android:paddingEnd="16dp"/>

        <TextView
            android:id="@+id/panNumberTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:text="PAN Number:"
            android:background="@drawable/edittext_border123"

            android:textSize="16sp"

             />
        <TextView
            android:id="@+id/panrTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adhar Card:-"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:paddingStart="6dp"
            android:paddingEnd="16dp" />
        <ImageView
            android:id="@+id/adhar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@drawable/authorrr"/>

        <TextView
            android:id="@+id/pancard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pan Card:-"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:paddingStart="6dp"
            android:paddingEnd="16dp" />
        <ImageView
            android:id="@+id/pan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/authorrr"/>


        <TextView
            android:id="@+id/verify"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_gravity="center"

            android:layout_marginBottom="20dp"
            android:textAlignment="center"
            android:background="@drawable/rounded_edges1"
            android:drawablePadding="10dp"
            android:padding="8dp"
            android:text="verify"
            android:textColor="@color/white"
            android:textColorHint="#808080"
            android:textSize="20dp" />

    </LinearLayout>


</RelativeLayout>