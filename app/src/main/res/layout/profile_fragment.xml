<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <ScrollView
    android:layout_width="match_parent"
    android:background="@color/white"
    android:padding="0dp"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:padding="16dp">

            <LinearLayout
                android:id="@+id/layout0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/menu"
                        android:layout_width="25dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="0dp"
                        android:layout_marginStart="-3dp"
                        android:src="@drawable/baseline_menu_24" />

                    <TextView
                        android:id="@+id/Nametextview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="80dp"
                        android:text="Profile"
                        android:textSize="25sp"
                        android:layout_gravity="center_vertical" />

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/edit"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="3dp"
                android:src="@drawable/editing" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/first"
            android:layout_marginTop="15dp"
            android:id="@+id/ooooooooooo">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/leftImageView"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/authorrr" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/leftImageView"
                android:layout_centerHorizontal="true"
                android:visibility="gone"/>





            <RelativeLayout
                android:id="@+id/textLayout22"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/leftImageView"
                android:layout_marginTop="0dp">
                <TextView
                    android:id="@+id/Usernametextview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/baseline_person_24"
                    android:drawablePadding="10dp"

                    android:textSize="20dp"
                    android:text="    Username      "
                    android:padding="20dp"
                    android:textColorHint="#808080" />

                <TextView
                    android:id="@+id/Phonetextview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/baseline_local_phone_24"
                    android:text="Phonenumber"
                    android:layout_below="@+id/Usernametextview"

                    android:drawablePadding="10dp"
                    android:textSize="20dp"
                    android:padding="20dp"
                    android:textColorHint="#808080"
                    />

                <TextView
                    android:id="@+id/Emailtextview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Phonetextview"
                    android:textSize="20dp"
                    android:drawablePadding="10dp"

                    android:layout_marginTop="0dp"
                    android:drawableStart="@drawable/baseline_email_24"
                    android:text="Email"
                    android:padding="20dp"
                    android:textColorHint="#808080" />



                <TextView
                    android:id="@+id/passwordtextview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Emailtextview"
                    android:drawableStart="@drawable/baseline_lock_24"
                    android:textSize="20dp"
                    android:drawablePadding="10dp"

                    android:text="   Password  "
                    android:padding="20dp"
                    android:textColorHint="#808080" />






            </RelativeLayout>

        </RelativeLayout>

<!--    <TextView-->
<!--        android:id="@+id/checkoutbutton"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="50dp"-->
<!--        android:layout_below="@+id/ooooooooooo"-->
<!--        android:layout_marginStart="20dp"-->
<!--        android:layout_marginTop="20dp"-->
<!--        android:layout_marginEnd="20dp"-->
<!--        android:layout_marginBottom="20dp"-->
