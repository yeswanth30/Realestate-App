<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"

    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="16dp"
        android:background="@color/white"

        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout1"
            android:orientation="vertical">

<!--            <ImageView-->
<!--                android:layout_width="20dp"-->
<!--                android:layout_height="20dp"-->
<!--                android:src="@drawable/baseline_arrow_back_ios_242" />-->

            <TextView
                android:layout_width="349dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:padding="20dp"
                android:text="Create your account"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/imgView"
                android:layout_below="@+id/layout_button"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:id="@+id/uploadimage"
                android:layout_marginTop="10dp"
                android:src="@drawable/addprofile" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/name"
                android:layout_marginLeft="0dp"
                android:background="@drawable/rectangle_background"

                android:hint="Name"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                android:textSize="18dp"
                android:padding="20dp" />
            <TextView
                android:id="@+id/nameErrorText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please enter your name"
                android:textColor="#f66b6b"
                android:textSize="16sp"
                android:visibility="gone"
                android:layout_below="@id/name"
                android:layout_marginTop="8dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Username"
                android:layout_marginTop="10dp"
                android:background="@drawable/rectangle_background"

                android:id="@+id/username"
                android:textColor="@color/black"
                android:padding="20dp" />
            <TextView
                android:id="@+id/usernameErrorText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please enter your username"
                android:textColor="#f66b6b"
                android:textSize="16sp"
                android:visibility="gone"
                android:layout_below="@id/username"
                android:layout_marginTop="8dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Phone"
                android:layout_marginTop="10dp"
                android:id="@+id/phone"
                android:maxLength="10"
                android:inputType="number"
                android:background="@drawable/rectangle_background"
                android:textColor="@color/black"
                android:padding="20dp" />
            <TextView
                android:id="@+id/phoneErrorText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please enter your phnone number"
                android:textColor="#f66b6b"
                android:textSize="16sp"
                android:visibility="gone"
                android:layout_below="@id/phone"
                android:layout_marginTop="8dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Email"
                android:layout_marginTop="10dp"
                android:background="@drawable/rectangle_background"

                android:id="@+id/email"
                android:textColor="@color/black"
                android:padding="20dp" />
            <TextView
                android:id="@+id/emailErrorText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please enter your email"
                android:textColor="#f66b6b"
                android:textSize="16sp"
                android:visibility="gone"
                android:layout_below="@id/email"
                android:layout_marginTop="8dp"/>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Password"
                android:layout_marginTop="10dp"
                android:id="@+id/password"
                android:maxLength="10"
                android:inputType="textPassword"
                android:background="@drawable/rectangle_background"
                android:textColor="@color/black"
                android:padding="20dp" />
            <ImageView
                android:id="@+id/togglePassword"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="-50dp"
                android:padding="5dp"
                android:layout_marginLeft="250dp"
                android:src="@drawable/hide"/>
            <TextView
                android:id="@+id/passwordErrorText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please enter your password"
                android:textColor="#f66b6b"
                android:textSize="16sp"

                android:visibility="gone"
                android:layout_below="@id/password"
                android:layout_marginTop="15dp"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:layout_marginTop="30dp"
                android:textSize="20dp"
                android:id="@+id/signupbutton"
                android:gravity="center"
                android:background="@drawable/signin_button"
                android:textColor="@color/white"
                android:padding="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="By clicking Sign up, you agree to the our Terms and Conditions"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:padding="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout1"
            android:gravity="center"
            android:layout_marginTop="0dp"
            android:padding="10dp"
            android:id="@+id/linear2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account?"
                android:textAlignment="center"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:padding="0dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log in"
                android:id="@+id/redirect"
                android:layout_marginLeft="10dp"
                android:textAlignment="center"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:padding="0dp" />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>
