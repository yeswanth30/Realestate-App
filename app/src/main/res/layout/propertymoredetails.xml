<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linear0"
            android:padding="25dp"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:id="@+id/back"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/baseline_arrow_back_ios_242" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Property Details"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linear01"
            android:layout_marginTop="-90dp"
            android:layout_below="@+id/linear0"
            android:orientation="vertical" >

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:padding="10dp"
                android:layout_marginTop="80dp"
                android:layout_centerHorizontal="true" />

            <LinearLayout
                android:id="@+id/dotsLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:orientation="horizontal" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear01"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingLeft="20dp" >

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Heading 1"
                android:textSize="30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linear2"
            android:layout_below="@+id/linear1"
            android:paddingLeft="20dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_location_on_24" />

            <TextView
                android:id="@+id/loaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Heading 2"
                android:layout_gravity="center"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linear3"
            android:layout_below="@+id/linear2"
            android:paddingLeft="20dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/descdribe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:padding="0dp"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/describe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Heading 4"
                android:justificationMode="inter_word"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linear03"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/linear3"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/bedroom" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/stairs1" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/parking" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/gym" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear003"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear03"
            android:orientation="horizontal"
            android:layout_marginTop="-10dp"
            android:paddingLeft="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bedrooms"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="65dp"
                android:text="5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/floors"
                android:textColor="@color/black"

                android:textStyle="bold"

                android:layout_marginEnd="70dp"
                android:text="5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/parking"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginEnd="50dp"
                android:text="Yes" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/gym"
                android:textColor="@color/black"

                android:textStyle="bold"

                android:text="No" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linear4"
            android:paddingLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/linear003"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Heading 4"
                android:textStyle="bold"
                android:layout_marginEnd="160dp"
                android:layout_gravity="center"
                android:textSize="20sp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Verify"
                android:textSize="16dp"
                android:textStyle="bold"
                android:id="@+id/verify"
                android:gravity="center"
                android:layout_marginLeft="-40dp"
                android:background="@drawable/signin_button"
                android:textColor="@color/white"
                android:padding="10dp" />

        </LinearLayout>
    </RelativeLayout>
</ScrollView>


